@{
    ViewData["Title"] = "Home Page";
}
@model User
<div>
    <h1 class="display-4">Welcome!</h1>
    <div class="jumbotron row">
        <div class="col-5">
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="post" class="form-group col-5">
                <span class="text-danger" asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">

                <span class="text-danger" asp-validation-for="Alias"></span>
                <label asp-for="Alias"></label>
                <input class="form-control" asp-for="Alias">

                <span class="text-danger" asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email">

                <span class="text-danger" asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password">

                <span class="text-danger" asp-validation-for="Confirm"></span>
                <label asp-for="Confirm"></label>
                <input class="form-control" asp-for="Confirm">

                <input value="Register" type="submit">
            </form>
        </div>
            <div class="col-5">
                <partial name="_LoginPartial.cshtml"></partial>
            </div>
        </div>
    </div>